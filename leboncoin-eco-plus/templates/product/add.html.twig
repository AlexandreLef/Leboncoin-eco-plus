{% extends 'base.html.twig' %}

{% block title %}- Annonces{% endblock %}

{% block body %}
    <form name="product" method="post" enctype="multipart/form-data">
        <div id="product">
            <ul>
                <li>This form should not contain extra fields.</li>
            </ul>
            <div>
                <label for="product_name" class="required">Name</label>
                <input type="text" id="product_name" name="product[name]" required="required">
            </div>
            <div>
                <label for="product_price" class="required">Price</label>
                <input type="text" id="product_price" name="product[price]" required="required">
            </div>
            <div>
                <input type="file" id="product_images" name="product[images][]" multiple="multiple">
            </div>
            <div>
                <label for="product_description" class="required">Description</label>
                <input type="text" id="product_description" name="product[description]" required="required">
            </div>
            <div>
                <label for="product_category">Category</label>
                <select id="product_category" name="product[category]">
                    <option value=""></option>
                    {% for category in categories %}
                        <option value="{{ category.id }}">{{ category.name }}</option>
                    {% endfor %}
                </select>
            </div>
            <div>
                <button type="submit" id="product_add">Add</button>
            </div>
        </div>
        {{ form_errors(form) }}
    </form>
{% endblock %}
